<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".ui.SplashActivity">

        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:contentDescription="@string/caretutors_logo_image"
            app:srcCompat="@drawable/caretutors_logo_pic"
            android:transitionName="@string/tr_name_logo_image"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:contentDescription="@string/caretutors_logo_text"
            app:srcCompat="@drawable/caretutors_logo_text"
            android:transitionName="@string/tr_name_logo_text"/>

    </LinearLayout>

</layout>


